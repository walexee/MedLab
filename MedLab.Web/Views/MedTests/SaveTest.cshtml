@model MedLab.Core.Models.MedTest

@{
    ViewBag.Title = "SaveTest";
    Layout = null;
}

@using (Html.BeginForm("SaveTest", "MedTests", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="modal fade" id="med-test-save-modal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@(Model.Id > 1 ? "Edit" : "New") Medical Test</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(m => m.Id)
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-9">
                                <div class="form-label-group">
                                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Name", id="testName", required = "required", autofocus = "autofocus" })
                                    <label for="testName">Name</label>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-label-group">
                                    @Html.TextBoxFor(m => m.Amount, new { @class = "form-control", placeholder = "Amount", type = "number", required = "required" })
                                    <label for="lastName">Amount</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-12">
                                <div class="form-label-group">
                                    @Html.TextAreaFor(m => m.Description, new { @class = "form-control", id = "testDescription", placeholder = "Description" })
                                    @*<label for="testDescription">Description</label>*@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <input type="submit" value="@(Model.Id > 0 ? "Save" : "Add")" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
}
